<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/shape_server_select_background"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/list_favorites_image"
        android:layout_width="44dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        tools:background="@drawable/flag_japan"/>

    <TextView
        android:id="@+id/list_favorites_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/list_favorites_icon"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/list_favorites_image"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/list_favorites_icon"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>