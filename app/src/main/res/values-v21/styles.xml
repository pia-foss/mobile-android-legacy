<resources>

    <style name="pia_theme_3_0" parent="MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/pia_gen_green</item>
        <item name="colorPrimaryDark">@color/black</item> <!-- notification color -->
        <item name="colorAccent">@color/pia_gen_green</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/windowBackground</item>
        <item name="material_drawer_primary_text">@color/textColorPrimary</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/textColorSecondary</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/greendark20</item>
        <item name="material_drawer_selected_text">@color/textColorPrimary</item>
        <item name="material_drawer_header_selection_text">@color/grey20</item>

        <item name="preferenceTheme">@style/SettingsFragmentStyle</item>

        <item name="colorControlNormal">@color/grey20</item>
        <item name="colorControlActivated">@color/pia_gen_green</item>
        <item name="colorControlHighlight">@color/pia_gen_green</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>

        <item name="splash_background">@drawable/map_bg</item>
        <item name="buy_account_button">@drawable/shape_rounded_border_green</item>
        <item name="edit_background">@drawable/shape_round_top_fill_white</item>
        <item name="scan_background">@drawable/shape_rounded_scan</item>

        <item name="tos_color">@color/greendark20</item>
        <item name="piax_edit_text_color">@color/black</item>
        <item name="piax_edit_underline_color">@color/grey85</item>

        <item name="grey20_white">@color/grey20</item>

        <item name="purchasing_finalize_background">@drawable/shape_purchasing_finalize</item>
        <item name="search_background">@color/white</item>
        <item name="region_selection_background">@color/grey85</item>
        <item name="region_list_item_background">@color/grey92</item>
        <item name="dialog_header_background">@color/grey85</item>
        <item name="dialog_body_background">@color/grey92</item>
    </style>

    <style name="PiaxGreenButton">
        <item name="android:background">@drawable/shape_rounded_solid_green</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BuyAccountButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/greendark20</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SettingsFragmentStyle.Switch" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:track">@color/grey85</item>
        <item name="android:thumbTint">@color/grey20</item>
        <item name="android:colorActivatedHighlight">@color/green</item>
    </style>

</resources>