<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke android:width="5px" android:color="@color/pia_gen_green"/>
        </shape>
    </item>

    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_grey_15"/>
            <stroke android:width="5px" android:color="@color/pia_gen_green"/>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tv_grey_20"/>
        </shape>
    </item>

</selector>