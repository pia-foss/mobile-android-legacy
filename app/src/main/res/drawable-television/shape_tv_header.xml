<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:state_activated="true">
        <shape>
            <solid android:color="@color/pia_gen_red" />
        </shape>
    </item>
    <item android:state_activated="true" android:state_enabled="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/tv_green_gradient_top"
                android:endColor="@color/tv_green_gradient_bottom"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/tv_yellow"
                android:endColor="@color/tv_yellow_dark"
                android:type="linear" />
        </shape>
    </item>
</selector>