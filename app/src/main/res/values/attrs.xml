<resources>
    <declare-styleable name="SwipeBackLayout">
        <attr name="edge_size" format="dimension"/>
        <attr name="edge_flag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadow_left" format="reference"/>
        <attr name="shadow_right" format="reference"/>
        <attr name="shadow_bottom" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PanelItem">
        <attr name="shouldChangeTextColors" format="boolean"/>
        <attr name="focusedTextColor" format="color" />
        <attr name="unfocusedTextColor" format="color" />
    </declare-styleable>

    <attr name="SwipeBackLayoutStyle" format="reference"/>
    <attr name="splash_background" format="reference"/>
    <attr name="buy_account_button" format="reference"/>
    <attr name="edit_background" format="reference"/>
    <attr name="scan_background" format="reference"/>

    <attr name="tos_color" format="reference" />
    <attr name="piax_edit_text_color" format="reference" />
    <attr name="piax_edit_underline_color" format="reference"/>
    <attr name="grey20_white" format="reference" />

    <attr name="checkmark_icon" format="reference" />
    <attr name="checkmark_icon_selected" />

    <attr name="purchasing_finalize_background" format="reference" />
    <attr name="search_background" format="reference" />
    <attr name="region_selection_background" format="reference" />
    <attr name="region_list_item_background" format="reference" />
    <attr name="dialog_header_background" format="reference" />
    <attr name="dialog_body_background" format="reference" />

    <declare-styleable name="GraphView">
        <attr name="maxElements" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="showLegend" format="boolean"/>
        <attr name="showDownloadSpeed" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PiaxEditText">
        <attr name="hint" format="string"/>
        <attr name="errorColor" format="color"/>
        <attr name="textColorMain" format="color"/>
        <attr name="hintColor" format="color"/>
        <attr name="underlineColor" format="color"/>
        <attr name="showLeftIcon" format="boolean"/>
        <attr name="hideHint" format="boolean"/>
        <attr name="maxLines" format="integer"/>
    </declare-styleable>

</resources>