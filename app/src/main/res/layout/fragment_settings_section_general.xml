<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="@color/account_details_background" >

        <LinearLayout
            android:id="@+id/connectOnBootSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/connect_on_boot"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preference_connect_on_boot_summary"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <Switch
                android:id="@+id/connectOnBootSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/connectOnAppStartSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/connect_onstart_title"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/connect_onstart"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <Switch
                android:id="@+id/connectOnAppStartSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/connectOnAppUpdateSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preference_app_update_title"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preference_app_update_message"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <Switch
                android:id="@+id/connectOnAppUpdateSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/darkThemeSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="@string/preference_app_theme"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

            </LinearLayout>

            <Switch
                android:id="@+id/darkThemeSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hapticFeedbackOnConnectSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preference_haptic_title"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preference_haptic_feedback_summary"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <Switch
                android:id="@+id/hapticFeedbackOnConnectSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/widgetSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preferences_widget_title"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/preferences_widget_summary"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showInAppMessagesSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="@string/inapp_pref_title"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

            </LinearLayout>

            <Switch
                android:id="@+id/showInAppMessagesSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showGeoServersSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="@string/geo_servers"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

            </LinearLayout>

            <Switch
                android:id="@+id/showGeoServersSwitchSetting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="false"
                android:focusable="false"
                android:checked="true"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/resetSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="@string/preference_reset_settings"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

            </LinearLayout>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>