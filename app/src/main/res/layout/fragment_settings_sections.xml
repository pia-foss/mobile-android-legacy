<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:background="@color/account_details_background" >

        <LinearLayout
            android:id="@+id/developerSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/ic_setting_general"
                android:scaleType="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Developer settings"
                android:textColor="@color/textColorPrimary"
                android:textAppearance="@style/Style07" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/generalSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_general"
                android:scaleType="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/menu_settings_general"
                android:textColor="@color/textColorPrimary"
                android:textAppearance="@style/Style07" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/protocolsSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_protocols"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/menu_settings_protocols"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:id="@+id/protocolSummarySetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/networkSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_network"
                android:scaleType="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/menu_settings_network"
                android:textColor="@color/textColorPrimary"
                android:textAppearance="@style/Style07" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/privacySettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_privacy"
                android:scaleType="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/menu_settings_privacy"
                android:textColor="@color/textColorPrimary"
                android:textAppearance="@style/Style07" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/automationSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_automation"
                android:scaleType="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:orientation="vertical"
                android:paddingVertical="4dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:text="@string/menu_settings_automation"
                    android:textColor="@color/textColorPrimary"
                    android:textAppearance="@style/Style07" />

                <TextView
                    android:id="@+id/automationSummarySetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:textAppearance="@style/Style08" />

            </LinearLayout>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/obfuscationSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/settings_bottom_divider" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_obfuscation"
                android:scaleType="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/menu_settings_obfuscation"
                android:textColor="@color/textColorPrimary"
                android:textAppearance="@style/Style07" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/helpSettings"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_setting_help"
                android:scaleType="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingHorizontal="16dp"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="@string/menu_settings_help"
                android:textColor="@color/textColorPrimary"
                android:textAppearance="@style/Style07" />

            <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
