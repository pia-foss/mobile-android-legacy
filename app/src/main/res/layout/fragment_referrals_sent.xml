<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/grey55"
        android:lineSpacingExtra="6sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/refer_free_header"
        />

    <TextView
        android:id="@+id/fragment_invites_free_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="?attr/grey20_white"
        android:lineSpacingExtra="-4sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:text="60 days"
        />

    <TextView
        android:id="@+id/fragment_invites_sent_count"
        style="@style/Style15"
        android:textColor="@color/greendark20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        tools:text="You have sent 5 invites"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/referral_divider"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"/>

    <RelativeLayout
        android:id="@+id/fragment_invites_pending_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/fragment_invites_pending_count"
            style="@style/Style10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/grey20_white"
            android:layout_centerVertical="true"
            tools:text="3 pending invites"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/referral_divider"
        android:layout_gravity="bottom"/>

    <RelativeLayout
        android:id="@+id/fragment_invites_signup_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/fragment_invites_signup_count"
            style="@style/Style10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/grey20_white"
            android:layout_centerVertical="true"
            tools:text="2 signups"
            />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="9dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/referral_divider"
        android:layout_gravity="bottom"/>

    <TextView
        style="@style/Style15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey55"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/refer_length_terms"
        />
</LinearLayout>