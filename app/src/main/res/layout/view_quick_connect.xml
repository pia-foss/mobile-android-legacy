<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quick_settings_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pia_tile_height_small"
    android:padding="16dp">

    <TextView
        android:id="@+id/quick_connect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quick_connect_title"
        android:textAppearance="@style/Style13"
        android:textColor="@color/grey55"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/quick_connect_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/quick_server_layout_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/quick_server_flag_1"
                android:layout_width="32dp"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_map_empty"
                android:gravity="center_horizontal"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/quick_server_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/grey20_white"
                android:ellipsize="end"
                android:textSize="10sp"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="1dp"
                android:layout_centerHorizontal="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quick_server_flag_1"
                app:textAllCaps="true"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/quick_dip_1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="23dp"
                app:srcCompat="@drawable/ic_dip_badge"
                app:layout_constraintLeft_toLeftOf="@id/quick_server_flag_1"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
