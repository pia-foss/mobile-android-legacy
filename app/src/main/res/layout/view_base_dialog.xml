<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="?attr/dialog_header_background">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/Style01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sort regions by"
            android:layout_centerVertical="true"
            android:textColor="?attr/grey20_white"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/dialog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/dialog_body_background">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/dialog_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="?attr/dialog_body_background">

        <LinearLayout
            android:id="@+id/dialog_right_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/dialog_negative_button"
                style="@style/Style06"
                android:textColor="@color/greendark20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                tools:text="CANCEL"/>

            <TextView
                android:id="@+id/dialog_positive_button"
                style="@style/Style06"
                android:textColor="@color/greendark20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="OK"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_left_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_neutral_button"
                style="@style/Style06"
                android:textColor="@color/greendark20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                tools:text="NEUTRAL"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>