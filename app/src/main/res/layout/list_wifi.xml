<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/list_wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="14dp"
        app:srcCompat="@drawable/ic_wifi"/>

    <TextView
        android:id="@+id/list_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_wifi_icon"
        android:layout_toEndOf="@id/list_wifi_icon"
        android:layout_centerVertical="true"
        style="@style/PiaTextBody1"
        tools:text="Network name"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/list_wifi_add_remove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_checkmark"
        android:visibility="gone"/>

</RelativeLayout>