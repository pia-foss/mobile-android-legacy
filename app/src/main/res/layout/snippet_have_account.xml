<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="@string/tos_pos_text"
        android:id="@+id/fragment_purchasing_TOS"
        style="@style/PiaTextBody1Style"
        android:textAppearance="@style/PiaTextBody1"
        android:background="@drawable/shape_standard_background"
        android:padding="10dp"
        android:layout_above="@id/fragment_purchasing_bottom"
        android:textColorLink="@color/pia_gen_green"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="@dimen/widget_buy_now_bottom"
        android:textAppearance="@style/PiaTextBody1"
        android:id="@+id/fragment_purchasing_bottom"
        android:clickable="true"
        android:background="@drawable/shape_standard_background"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:focusable="true"
        tools:text="@string/purchasing_bottom"
        />

</merge>