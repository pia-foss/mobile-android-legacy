    <!-- drawable -->
    <item>
        <shape android:shape="oval">
            <src app:srcCompat="@drawable/ic_slider_knob"/>
            <size android:width="40dp" android:height="40dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>