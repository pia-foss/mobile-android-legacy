<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Drop Shadow Stack -->
    <item>
        <shape android:shape="oval">
            <padding android:top="1dp" android:right="1dp" android:bottom="3dp" android:left="1dp" />
            <solid android:color="#00CCCCCC" />
        </shape>
    </item>
    <!-- second line -->
    <item>
        <shape android:shape="oval">
            <padding android:top="1dp" android:right="1dp" android:bottom="2.5dp" android:left="1dp" />
            <solid android:color="#05CCCCCC" />
        </shape>
    </item>

    <!-- third line -->
    <item>
        <shape android:shape="oval">
            <padding android:top="1dp" android:right="1dp" android:bottom="2dp" android:left="1dp" />
            <solid android:color="#20CCCCCC" />
        </shape>
    </item>

    <!-- third/half line -->
    <item>
        <shape android:shape="oval">
            <padding android:top="0dp" android:right="1dp" android:bottom="1.5dp" android:left="1dp" />
            <solid android:color="#25CCCCCC" />
        </shape>
    </item>

    <!-- fourth line -->
    <item>
        <shape android:shape="oval">
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <solid android:color="#50CCCCCC" />
        </shape>
    </item>

