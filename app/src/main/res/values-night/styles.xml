<resources>

    <style name="pia_theme_3_0" parent="MaterialDrawerTheme">
        <item name="colorPrimary">@color/pia_gen_green</item>
        <item name="colorPrimaryDark">@color/windowBackground</item> <!-- notification color -->
        <item name="colorAccent">@color/pia_gen_green</item>

        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryDark</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/windowBackground</item>
        <item name="material_drawer_primary_text">@color/textColorPrimaryDark</item>
        <item name="material_drawer_primary_icon">@color/textColorPrimaryDark</item>
        <item name="material_drawer_secondary_text">@color/textColorSecondaryDark</item>
        <item name="material_drawer_hint_text">@color/material_drawer_dark_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_dark_divider</item>
        <item name="material_drawer_selected">@color/greendark20</item>
        <item name="material_drawer_selected_text">@color/textColorPrimaryDark</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_dark_header_selection_text</item>

        <item name="preferenceTheme">@style/PreferenceTheme</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/pia_gen_green</item>
        <item name="colorControlHighlight">@color/pia_gen_green</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="splash_background">@drawable/map_bg_dark</item>
        <item name="buy_account_button">@drawable/shape_rounded_border_white</item>
        <item name="edit_background">@drawable/shape_round_top_fill_grey</item>
        <item name="scan_background">@drawable/shape_rounded_scan_dark</item>

        <item name="tos_color">@color/white</item>
        <item name="piax_edit_text_color">@color/white</item>
        <item name="piax_edit_underline_color">@color/grey15</item>

        <item name="grey20_white">@color/white</item>

        <item name="checkmark_icon">@drawable/ic_selection_dark</item>
        <item name="checkmark_icon_selected">@drawable/ic_selection_checked_dark</item>

        <item name="purchasing_finalize_background">@drawable/shape_rounded_border_grey55</item>
        <item name="search_background">@color/grey15</item>
        <item name="region_selection_background">@color/grey15</item>
        <item name="region_list_item_background">@color/grey20</item>
        <item name="dialog_header_background">@color/grey40</item>
        <item name="dialog_body_background">@color/grey20</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_dark_overflow</item>
    </style>

    <style name="PIAButton">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/shape_round_rect_accent</item>
        <item name="android:textAppearance">?android:textAppearanceLargeInverse</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PIAButton.Green">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PIAButton.Green.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/ic_shadow_left</item>
        <item name="shadow_right">@drawable/ic_shadow_right</item>
        <item name="shadow_bottom">@drawable/ic_shadow_left</item>
    </style>


    <!-- PIA 3.0 styles -->

    <!-- Wrappers - Notice that android need style-wappers for line-height to work properly -->
    <style name="PiaTextTitleStyle">
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="TextPiaSubheadingStyle">
        <item name="android:lineSpacingExtra">10dp</item>
    </style>

    <style name="PiaTextBody1Style">
        <item name="android:lineSpacingExtra">6dp</item>
    </style>

    <style name="PiaTextBody2Style">
        <item name="android:lineSpacingExtra">9dp</item>
    </style>

    <style name="PiaTextHintAndInputStyle">
        <item name="android:lineSpacingExtra">12dp</item>
    </style>

    <!-- Styles -->

    <style name="PiaTextAppbar">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/pia_text_light_white_87_percent</item>
    </style>

    <style name="PiaTextTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/pia_text_light_white_87_percent</item>
    </style>

    <style name="PiaTextSubheading">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">@color/pia_text_light_white_67_percent</item>
    </style>

    <style name="PiaTextInput">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/pia_text_light_white_67_percent</item>
        <item name="android:textColorHint">@color/pia_text_light_white_37_percent</item>
    </style>
    <style name="PiaTextInputHint">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="android:textColor">@color/pia_text_light_white_37_percent</item>
        <item name="android:textColorHint">@color/pia_text_light_white_37_percent</item>
    </style>
    <style name="PiaTextButton">
        <item name="android:textSize">15sp</item>
        <item name="fontPath">fonts/Roboto-RobotoMedium.ttf</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/pia_gen_green</item>
    </style>
    <style name="PiaTextBody1">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/pia_text_light_white_67_percent</item>
    </style>
    <style name="PiaTextBody2">
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/Roboto-RobotoMedium.ttf</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/pia_text_light_white_87_percent</item>
    </style>
    <style name="PiaTextHighlighted">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/pia_gen_green</item>
    </style>
    <style name="PiaTextSmallInfo">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/pia_text_light_white_37_percent</item>
    </style>
    <style name="PiaTextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/pia_text_light_white_67_percent</item>
    </style>
    <style name="PiaTextCaptionSmall">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/pia_text_light_white_37_percent</item>
    </style>
    <style name="PiaTextLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/pia_text_light_white_37_percent</item>
    </style>

    <!-- Component styling -->
    <style name="piaToolbarOverflow" parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@color/textColorPrimaryDark</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- PIAX Styles -->

    <style name="BuyAccountButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RedeemButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="RedeemGiftCardTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
